<h1>Sign up</h1><br>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user) do |f| %>

      <div class='form-group'>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :required => 'required', class: 'form-control' %>
      </div>

      <div class='form-group'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :required => 'required', class: 'form-control' %>
      </div>

      <div class='form-group'>
      <%= f.label :email %>
      <%= f.email_field :email, :required => 'required', class: 'form-control' %>
      </div>

      <div class='form-group'>
      <%= f.label :password %>
      <%= f.password_field :password, :required => 'required', class: 'form-control' %>
  	  </div>

      <%= f.submit "Sign up", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
